<!DOCTYPE html>
<html>
<head>
	<title>AU TDL::Dashboard <%= school.name %></title>

	<style type="text/css">

		table {
			width: 100%;
		}
		th, td {
			padding: 10px;
		}

		body,html {
			margin: 0;
			padding: 0;
			font-family: sans-serif;
			background: #34495e; 
		}

		.container {
			background-color: white;
			padding-bottom: 5%;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
		}

		
	</style>
	<link rel="stylesheet" type="text/css" href="/Stylesheets/bootstrap.min.css">
</head>
<body>

		<% if(message && message.length > 0) { %>
		<!-- <div class="container" style="margin-top: 2%"> -->
			<div class="alert alert-success" role="alert"><%= message %></div>
		<!-- </div> -->
	<% } %>

	<div class="container" style="border: 3px solid black;">

		<nav class="navbar navbar-light">
		  <a class="navbar-brand" href="/"><img src="https://ansaluniversity.edu.in/front-assets/images/logo.png"></a>
		  <a href="/schools/<%= school._id %>/logout" class="btn btn-outline-danger my-2 my-sm-0">Logout</a>
		</nav>

		<h3>Welcome back, <%= school.name %></h3>	

		<hr>

		<table border="1px">
			<tr>
				<th colspan="3" style="text-align: center; font-size: 3vh">TDL Courses from your Department</th>
			</tr>

			<tr>
				<th>Course Name</th>
				<th>Faculty</th>
				<th>Number of Students Enrolled</th>
			</tr>

			<% if(school.courses) { %>
					<% school.courses.forEach(function(course) { %>
						<tr>
							<td><a href="/schools/<%= school._id %>/courses/<%= course._id %>"><%= course.title %></a></td>
							<td><%= course.taughtBy %></td>
							<td><%= course.students.length %></td>
						</tr>
					<% }); %> 
			<% } %>
		</table>	

		<br>

		<center><a class="btn btn-outline-secondary btn-lg" href="/schools/<%= school._id %>/courses/new">Add a New Course</a></center>

	</div>

</body>
</html>